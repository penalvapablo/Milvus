---
import { Image } from '@astrojs/image/components';

const { textos } = Astro.props;
const {
  titulo1,
  titulo2,
  titulo3,
  p1,
  p2,
  p3,
  p4,
  p5,
  p6,
} = textos;
---

<section class="pb-24">
  <h1
    class="mx-auto max-w-[90%] pt-12 pb-20 text-center text-6xl font-light leading-[4rem] tracking-wide text-two md:text-7xl lg:text-8xl xl:max-w-[1120px] xl:text-8xl">
    {titulo1}
    <span class="text-one">{titulo2}</span>
    {titulo3}
  </h1>
  <div
    class="mx-auto flex w-[90%] flex-col items-center gap-8 xl:w-[1200px] xl:flex-row">
    <Image
      format="webp"
      alt=""
      src="/Ana_Mahmoud.webp"
      width={550}
      height={692}
      class="w-full max-w-[550px] rounded-[15px]"
    />
    <div>
      <p
        class="max-w-[800px] text-center text-xl font-semibold text-two">
        {p1}<br /><br />{p2}<br /><br />{p3}<br /><br />{
          p4
        }<br /><br />{p5}<br />
        <br />{p6}
      </p>
    </div>
  </div>
  <p></p>
</section>
