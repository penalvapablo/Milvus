  <div
    class="mt-[40px] flex flex-col items-center justify-center">
    <Image
      alt="logo"
      src={logo}
      width={75}
      height={91}
    />
    <h1
      class="text-center text-8xl font-light leading-[5rem] text-white">
      Milvus Travel
    </h1>
  </div>

  <HeroElementsEs />

  <MobileBurger client:load />
</div>
