---
import { Image } from '@astrojs/image/components';
import bg_mobile from '../../../assets/bg-mobile.jpg';
import logo from '../../../assets/Logo.svg';
import HeroElementsEs from '../HeroElements/HeroElementsEs';
import LanguajeSelector from '../LanguajeSelector';
import MobileBurger from '../MobileBurger';
import NavEs from '../Nav/NavEs';
---

<div class="relative h-screen landscape:h-[750px]">
  <Image
    alt="prueba"
    src={bg_mobile}
    width={640}
    height={1148}
    class="absolute top-0 -z-10 h-screen object-cover sm:hidden"
  />
