            <div class="bg bg-two max-w-[600px] rounded-tl-[25px] rounded-br-[25px] font-semibold text-white">
              <p class="p-7 ">{testimonio5.texto}</p>
              <p class="text-one pr-7 pb-7 text-right ">
                {testimonio5.autor}
              </p>
            </div>
            <div class="bg bg-two max-w-[600px] rounded-tl-[25px] rounded-br-[25px] font-semibold text-white">
              <p class="p-7 ">{testimonio6.texto}</p>
              <p class="text-one pr-7 pb-7 text-right ">
                {testimonio6.autor}
              </p>
            </div>
          </div>
        </>
      )
    }
  </div>
</section>
