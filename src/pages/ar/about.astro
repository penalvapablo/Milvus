---
import Layout from '../../layouts/Layout.astro';
import About from '../../components/About/About.astro';
import Contacto from '../../components/Contacto/Contacto';

import textos from '../../components/About/aboutAr.json';
import MobileBurger from '../../components/Hero/MobileBurger';
import heroTextos from '../../components/About/heroAboutAr.json';
import contactoTextos from '../../components/Contacto/contacto.json';
import NavAbout from '../../components/About/NavAbout';

const idioma = 'ar';
---

<Layout
  title="من نحن "
  description="وكالة سياحة خاصة"
  language="ar">
  <NavAbout
    idioma={idioma}
    textos={heroTextos}
  />
  <About
    textos={textos}
    idioma={idioma}
  />
  <Contacto
    client:load
    textos={contactoTextos}
    idioma={idioma}
  />

  <MobileBurger
    client:load
    textos={heroTextos}
    idioma={idioma}
  />
</Layout>
