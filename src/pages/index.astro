---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero/Hero.astro';
import Destinos from '../components/Destinos/Destinos';
import Galeria from '../components/Galeria/Galeria';
import Servicios from '../components/Servicios/Servicios.astro';
import Testimonios from '../components/Testimonios/Testimonios.astro';
import Contacto from '../components/Contacto/Contacto';

// TEXTOS
import heroTextos from '../components/Hero/heroEs.json';
import destinosTextos from '../components/Destinos/destinosEs.json';
import serviciosTextos from '../components/Servicios/servicios.json';
import testimoniosTextos from '../components/Testimonios/testimoniosEs.json';
import contactoTextos from '../components/Contacto/contacto.json';

const idioma = 'es';
---

<Layout
  title="Milvus Travel"
  description="Agencia de viajes personalizados"
  language="es">
  <Hero
    textos={heroTextos}
    idioma={idioma}
  />
  <Destinos
    client:load
    textos={destinosTextos}
    idioma={idioma}
  />
  <Servicios
    idioma={idioma}
    textos={serviciosTextos}
  />
  <Galeria
    client:load
    idioma={idioma}
  />
  <Testimonios
    idioma={idioma}
    textos={testimoniosTextos}
  />
  <Contacto
    client:load
    textos={contactoTextos}
    idioma={idioma}
  />

  <style></style>
</Layout>
