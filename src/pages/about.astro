---
import Layout from '../layouts/Layout.astro';
import AboutSection from '../components/About/About.astro';
import Contacto from '../components/Contacto/Contacto';

import textos from '../components/About/aboutEs.json';
import MobileBurger from '../components/MobileNav/MobileBurger';
import heroTextos from '../components/Hero/heroEs.json';
import contactoTextos from '../components/Contacto/contacto.json';
import NavAbout from '../components/About/NavAbout';

const idioma = 'es';
---

<Layout
  title="Sobre Nosotros "
  description="Agencia de viajes personalizados"
  language="es">
  <NavAbout
    idioma={idioma}
    textos={heroTextos}
  />
  <AboutSection
    textos={textos}
    idioma={idioma}
  />
  <Contacto
    client:load
    textos={contactoTextos}
    idioma={idioma}
  />

  <MobileBurger
    client:load
    textos={heroTextos}
    idioma={idioma}
  />
</Layout>
