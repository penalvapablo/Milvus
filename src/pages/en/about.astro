---
import Layout from '../../layouts/Layout.astro';
import About from '../../components/About/About.astro';
import Contacto from '../../components/Contacto/Contacto';

import textos from '../../components/About/aboutEn.json';
import MobileBurger from '../../components/Hero/MobileBurger';
import heroTextos from '../../components/Hero/heroEn.json';
import contactoTextos from '../../components/Contacto/contacto.json';
import NavAbout from '../../components/About/NavAbout';

const idioma = 'en';
---

<Layout
  title="Sobre Nosotros "
  description="Agencia de viajes personalizados"
  language="es">
  <NavAbout
    idioma={idioma}
    textos={heroTextos}
  />
  <About
    textos={textos}
    idioma={idioma}
  />
  <Contacto
    client:load
    textos={contactoTextos}
    idioma={idioma}
  />

  <MobileBurger
    client:load
    textos={heroTextos}
    idioma={idioma}
  />
</Layout>
