---
export interface Props {
  title: string;
  description: string;
  language: string;
}

const { title, description, language } = Astro.props;
---

<!DOCTYPE html>
<html lang={language}>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/LOGO2.svg"
    />
    <!-- <link
      rel="alternate"
      href={`http://milvustravel.com/${language}`}
      hreflang={language}
    />
    <link
      rel="alternate"
      href={`http://milvustravel.com/${language}`}
      hreflang={language}
    />
    <link
      rel="alternate"
      href={`http://milvustravel.com/${language}`}
      hreflang={language}
    /> -->
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>{title}</title>
    <meta
      name="description"
      content={description}
    />
    <meta
      property="og:url"
      content="https://www.milvus.travel/"
    />
    <meta
      property="og:type"
      content="website"
    />
    <meta
      property="og:title"
      content="Milvus Travel"
    />
    <meta
      property="og:description"
      content={description}
    />
    <meta
      property="og:image"
      content="https://www.milvus.travel/Logo-preview.svg"
    />
  </head>

  <body>
    <slot />
  </body>

  <style is:global>
    html {
      scroll-behavior: smooth;
      scrollbar-gutter: stable;
    }

